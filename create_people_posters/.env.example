#####################################
# Global notes
#####################################
# All scripts read ONLY from: ./config/.env (next to orchestrator.py).
# Booleans: true/false/1/0/yes/no (case-insensitive).
# Prefer absolute paths or forward slashes for cross-platform use.

#####################################
# Orchestrator (orchestrator.py)
#####################################
# Where your Kometa logs live (used by name_checker_dir.py & get_missing_people.py)
ORCH_LOGS_DIR=

# Style folder to target for README/sync_md (e.g. transparent, bw, etc.)
ORCH_STYLE=transparent

# Optional commit/push customization (used by the "push" step)
ORCH_COMMIT_MESSAGE=                # e.g., chore: sync posters & docs
ORCH_GIT_USER_NAME=                 # optional git author.name override
ORCH_GIT_USER_EMAIL=                # optional git author.email override

# Background-removal verification
# If set to true, orchestrator will FAIL (exit 2) when SEL_DOWNLOAD_DIR is unset or missing.
ORCH_REQUIRE_BG_OUTPUT=true
# If set to true, orchestrator will FAIL (exit 2) when PowerShell/pwsh is not available.
ORCH_REQUIRE_POWERSHELL=true
# Extensions considered as background-removed outputs (comma-separated, no dots).
ORCH_BG_EXTS=png
# Continue the pipeline even if 0 BG files were produced (otherwise it exits 0 early).
ORCH_CONTINUE_IF_EMPTY=false

#####################################
# TMDB & poster generation
# (tmdb_people.py, prep_people_dirs.py)
#####################################
# REQUIRED â€” your TMDB v3 API key
TMDB_KEY=

# Optional inputs/tuning
PERSON_DEPTH=10
PEOPLE_LIST=./config/people_list.txt   # text file with one name per line (optional)

# Raw posters folder (tmdb_people.py writes here)
POSTER_DIR=./config/posters
# Input folder scanned by get_missing_people_dir.py (usually same as POSTER_DIR)
POSTERS_INPUT_DIR=./config/posters

#####################################
# People-Images repo location
# (ensure_people_repo.py, sync_people_images.py, update_people_repos.py)
#####################################
# *** IMPORTANT ***
# Clone the 7 People-Images repos into a folder (NOT inside create_people_posters/config).
# Example: /data/Kometa-People-Images
PEOPLE_IMAGES_DIR=
# Branch to use when updating/pushing. Leave blank to auto-detect (main/master) per repo.
PEOPLE_BRANCH=

#####################################
# Adobe Express Remove Background (sel_remove_bg.py)
#####################################
# Chrome profile so you stay signed into Adobe Express
SEL_USER_DATA_DIR=./config/chrome-profile
SEL_PROFILE_DIR=Profile 1

# Input/Output paths for BG removal
# Source JPGs that will be uploaded to Adobe Express (prep_people_dirs.py prepares these).
SEL_SRC_DIR=./config/people_dirs/Downloads
# Originals are copied here for safekeeping (input JPGs before BG removal).
SEL_ORIG_DIR=./config/people_dirs/original
# Where the browser downloads the processed PNGs (orchestrator may verify this).
SEL_DOWNLOAD_DIR=./config/sel_downloads

# Timeouts & behavior
SEL_MAX_WAIT_READY_SEC=60           # wait for page to become interactive
SEL_PROC_TIMEOUT=120                # max seconds per file
SEL_MAX_WAIT_DL_SEC=20              # wait for a download to complete
SEL_DL_BUTTON_TIMEOUT=12            # wait for "Remove background" button
SEL_RELOAD_EACH_FILE=true           # reload tool page between files

# Size enforcement for INPUT JPGs (2000x3000 recommended)
SEL_EXPECT_WIDTH=2000
SEL_EXPECT_HEIGHT=3000
SEL_ENFORCE_SIZE=true

# Advanced
SEL_TOOL_URL=https://new.express.adobe.com/tools/remove-background
# SEL_INPUT_EXTS=jpg,jpeg,webp      # optional: comma list

#####################################
# (Optional) compare_image_trees.py
#####################################
# Uncomment and adjust if you use the QA script.
# COMPTREE_PNG_INDEX=6
# COMPTREE_CASE_SENSITIVE=true
# COMPTREE_CHECK_DIMENSIONS=true
