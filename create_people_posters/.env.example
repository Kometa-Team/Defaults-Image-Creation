#####################################
# Global notes
#####################################
# All scripts read only from: ./config/.env (next to each script).
# Booleans: true/false/1/0/yes/no (case-insensitive).
# Use absolute paths or forward slashes for cross-platform paths.

#####################################
# Orchestrator (orchestrator.py)
#####################################
# Path to Kometa logs for name discovery (name_checker_dir.py / get_missing_people.py)
ORCH_LOGS_DIR=

# Single style fallback (used if ORCH_STYLES/--styles is not set)
ORCH_STYLE=transparent

# Multiple styles for README + sync_md (comma list). If set, overrides ORCH_STYLE.
# Example: ORCH_STYLES=transparent,diiivoycolor
ORCH_STYLES=transparent,diiivoycolor

# Optional push customization
ORCH_COMMIT_MESSAGE=                   # leave empty to let orchestrator build a nice default
ORCH_GIT_USER_NAME=                    # optional git author override for push
ORCH_GIT_USER_EMAIL=                   # optional git author override for push

# Background-removal verification (sel_remove_bg.py outputs)
SEL_DOWNLOAD_DIR=./config/sel_downloads
# Extensions to count as produced by sel_remove_bg (comma list)
ORCH_BG_EXTS=png
# If true, continue pipeline even when remove_bg produced 0 files
ORCH_CONTINUE_IF_EMPTY=false

# Hard requirements (fail-fast when set true)
ORCH_REQUIRE_POWERSHELL=true          # if true and no pwsh/powershell found -> exit 2
ORCH_REQUIRE_BG_OUTPUT=true           # if true and SEL_DOWNLOAD_DIR missing -> exit 2


#####################################
# TMDB & poster generation (tmdb_people.py, prep_people_dirs.py)
#####################################
TMDB_KEY=                              # REQUIRED â€” your TMDB v3 API key
PERSON_DEPTH=10                        # Optional: graph depth for person credits
PEOPLE_LIST=./config/people_list.txt   # Optional: one name per line
POSTER_DIR=./config/posters            # Where tmdb_people.py saves raw posters
POSTERS_INPUT_DIR=./config/posters     # Where get_missing_people_dir.py looks for input posters


#####################################
# People-Images repo location
# (ensure_people_repo.py, sync_people_images.py, update_people_repos.py)
#####################################
# *** IMPORTANT ***
# Clone the 7 People-Images repos into a folder (e.g., Kometa-People-Images).
# This folder should NOT be inside create_people_posters/config.
# Example: /data/Kometa-People-Images or D:/Kometa-People-Images
PEOPLE_IMAGES_DIR=
PEOPLE_BRANCH=master                   # Optional; script can auto-detect per repo if left empty


#####################################
# Adobe Express Remove Background (sel_remove_bg.py)
#####################################
# Chrome profile so you're signed into Adobe Express
SEL_USER_DATA_DIR=./config/chrome-profile    # Chrome user-data dir (persist login)
SEL_PROFILE_DIR=Profile 1                    # Chrome profile folder name

# I/O folders used by sel_remove_bg.py
SEL_SRC_DIR=./config/people_dirs/Downloads   # input JPGs (from tmdb/get_missing flows)
SEL_ORIG_DIR=./config/people_dirs/original   # original JPGs preserved here
# Output is SEL_DOWNLOAD_DIR (listed above)

# Timeouts & behavior
SEL_MAX_WAIT_READY_SEC=60              # page to become interactive
SEL_PROC_TIMEOUT=120                   # max seconds per file
SEL_MAX_WAIT_DL_SEC=20                 # wait for a download to complete
SEL_DL_BUTTON_TIMEOUT=12               # wait for the "Remove background" button
SEL_RELOAD_EACH_FILE=true              # reload tool page between files

# Size enforcement (input JPGs)
SEL_EXPECT_WIDTH=2000
SEL_EXPECT_HEIGHT=3000
SEL_ENFORCE_SIZE=true

# Advanced (rarely changed)
SEL_TOOL_URL=https://new.express.adobe.com/tools/remove-background
# SEL_INPUT_EXTS=jpg,jpeg,webp         # optional: comma list