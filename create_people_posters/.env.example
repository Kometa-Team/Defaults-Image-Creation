TMDB_KEY=<tmdbapi key here>
PERSON_DEPTH = 10

#####################################
# Section for sel_remove_bg.py
#####################################
# Chrome profile (keeps you signed in)
SEL_USER_DATA_DIR=D:\bullmoose20\pyprogs\sel_remove_bg\chrome-profile
SEL_PROFILE_DIR=Profile 1

# Where your JPGs live and where originals should go
SEL_SRC_DIR=D:\Defaults-Image-Creation\create_people_posters\config\people_dirs\Downloads
SEL_ORIG_DIR=D:\Defaults-Image-Creation\create_people_posters\config\people_dirs\original

# A temp folder Chrome uses when the page downloads the PNG
SEL_DOWNLOAD_DIR=D:\Defaults-Image-Creation\create_people_posters\config\sel_downloads

# Flow & patience knobs
SEL_MAX_WAIT_READY_SEC=180
SEL_PROC_TIMEOUT=120
SEL_MAX_WAIT_DL_SEC=20

# Between each file, reload the (should remain true always)
SEL_RELOAD_EACH_FILE=true

# Download button hunt (poll every ~2s up to this many seconds)
SEL_DL_BUTTON_TIMEOUT=12

# Tool URL (override if Adobe moves the endpoint)
SEL_TOOL_URL=https://new.express.adobe.com/tools/remove-background

# Enforce input dimensions
SEL_EXPECT_WIDTH=2000
SEL_EXPECT_HEIGHT=3000
SEL_ENFORCE_SIZE=true

# Optional: comma-separated input extensions (defaults: jpg,jpeg)
# SEL_INPUT_EXTS=jpg,jpeg,webp

# Optional: turns on/off pretty timing logs (defaults to true)
SEL_PRETTY_LOG=true