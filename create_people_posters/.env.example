#####################################
# Global notes
#####################################
# All scripts read only from: ./config/.env (next to each script).
# Booleans: true/false/1/0/yes/no (case-insensitive).
# Use absolute paths or forward slashes for cross-platform paths.

#####################################
# Orchestrator (orchestrator.py)
#####################################
ORCH_LOGS_DIR=                         # Kometa logs folder for name_checker_dir.py/get_missing_people.py
ORCH_STYLE=transparent                 # which style folder to target for README/sync_md

#####################################
# TMDB & poster generation (tmdb_people.py, prep_people_dirs.py)
#####################################
TMDB_KEY=                              # REQUIRED â€” your TMDB v3 API key
PERSON_DEPTH=10                        # Optional: graph depth for person credits (10 is recommended)
PEOPLE_LIST=./config/people_list.txt   # Optional: path to a text file with one name per line
POSTER_DIR=./config/posters            # Where tmdb_people.py saves raw posters

#####################################
# People-Images repo location (ensure_people_repo.py, sync_people_images.py, update_people_repos.py)
#####################################
# ***NOTE*** You need to clone the 7 repos down and place them into a folder called Kometa-People-Images and this should NOT be inside the config
# folder for create_people_posters. Therefore you should definitely change the value below
PEOPLE_IMAGES_DIR=                     # e.g., /data/Kometa-People-Images
PEOPLE_BRANCH=master                   # git branch for update_people_repos.py

#####################################
# Adobe Express Remove Background (sel_remove_bg.py)
#####################################
SEL_USER_DATA_DIR=./config/chrome-profile    # Chrome user-data dir (persist login)
SEL_PROFILE_DIR=Profile 1                    # Chrome profile folder name
SEL_SRC_DIR=./config/people_dirs/Downloads   # source JPGs from tmdb_people.py
SEL_ORIG_DIR=./config/people_dirs/original   # keep original JPGs here
SEL_DOWNLOAD_DIR=./config/sel_downloads      # where PNGs are downloaded

SEL_MAX_WAIT_READY_SEC=60              # page to become interactive
SEL_PROC_TIMEOUT=120                   # max seconds per file
SEL_MAX_WAIT_DL_SEC=20                 # wait for a download to complete
SEL_DL_BUTTON_TIMEOUT=12               # wait for the "Remove background" button
SEL_RELOAD_EACH_FILE=true              # reload tool page between files

# Size enforcement (input JPGs)
SEL_EXPECT_WIDTH=2000
SEL_EXPECT_HEIGHT=3000
SEL_ENFORCE_SIZE=true

# Advanced (rarely changed)
SEL_TOOL_URL=https://new.express.adobe.com/tools/remove-background
# SEL_INPUT_EXTS=jpg,jpeg,webp         # optional: comma list
